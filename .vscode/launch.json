    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'app'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=excel-merger"
                ],
                "filter": {
                    "name": "app",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'excel-merger'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=excel-merger",
                    "--package=excel-merger"
                ],
                "filter": {
                    "name": "excel-merger",
                    "kind": "bin"
                }
            },
            "args": ["Book1.xlsx", "Book2.xlsx"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'excel-merger'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=excel-merger",
                    "--package=excel-merger"
                ],
                "filter": {
                    "name": "excel-merger",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'app_integration_test'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=app_integration_test",
                    "--package=excel-merger"
                ],
                "filter": {
                    "name": "app_integration_test",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}